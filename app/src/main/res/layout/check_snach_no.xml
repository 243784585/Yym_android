<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp355"
    android:layout_height="@dimen/dp208"
    android:id="@+id/ll_dialog"
    android:layout_centerHorizontal="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pop_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp11"
            android:layout_marginLeft="@dimen/dp11"
            android:layout_marginRight="@dimen/dp11"
            android:layout_marginTop="@dimen/dp11"
            android:text="TITLE"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#333333"
            android:textSize="@dimen/sp12" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp11"
            android:layout_marginRight="@dimen/dp11"
            android:background="#f3f3f3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp11"
            android:layout_marginRight="@dimen/dp11"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pop_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="参与1次，夺宝号码"
                android:textColor="@color/yym_black"
                android:textSize="@dimen/sp11" />

        </LinearLayout>

        <GridView
            android:id="@+id/gv_snach_no"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp115"
            android:layout_marginLeft="@dimen/dp11"
            android:layout_marginRight="@dimen/dp11"
            android:layout_marginTop="@dimen/dp11"
            android:numColumns="4"
            android:orientation="horizontal">



        </GridView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp11"
            android:layout_marginRight="@dimen/dp11"
            android:layout_weight="0.57"
            android:background="#dbdbdb" />

        <TextView
            android:id="@+id/tv_onclick"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp34"
            android:gravity="center"
            android:text="确定"
            android:textColor="#007aff"
            android:textSize="@dimen/sp12" />
    </LinearLayout>
</RelativeLayout>