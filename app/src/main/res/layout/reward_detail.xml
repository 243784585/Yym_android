<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <com.shengtao.utils.LYDBHeader
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50">
    </com.shengtao.utils.LYDBHeader>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_head_image_ed"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp180"
                android:scaleType="fitXY"
                android:src="@mipmap/moren" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginLeft="@dimen/dp11"
                android:layout_marginRight="@dimen/dp11"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_goods_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦了啦啦啦啦啦"
                    android:textColor="#494949"
                    android:textSize="@dimen/sp12" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp17"
                    android:layout_marginTop="@dimen/dp17"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textColor="#ff4447"
                        android:textSize="@dimen/sp12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#ff4447"
                        android:textSize="@dimen/dp20" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp3"
                        android:text="原价："
                        android:textColor="#999999"
                        android:textSize="@dimen/sp11" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textColor="#999999"
                        android:textSize="@dimen/sp11" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp17"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/time" />

                        <TextView
                            android:id="@+id/tv_open_time1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp13"
                            android:gravity="center_vertical"
                            android:text="已结束"
                            android:textColor="#888888"
                            android:textSize="@dimen/sp11" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/textView3"
                            android:layout_toStartOf="@+id/textView3"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textColor="#FE4546"
                            android:textSize="@dimen/sp11" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/textView2"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"
                            android:text="人已参与"
                            android:textColor="@color/register_user_agreement_color"
                            android:textSize="@dimen/sp11" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_luck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp20"
                    android:visibility="gone"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="中奖号："
                        android:textColor="#ff4447"
                        android:textSize="@dimen/sp15" />

                    <TextView
                        android:id="@+id/reward_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1002356"
                        android:textColor="#ff4447"
                        android:textSize="@dimen/sp15" />


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp3"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:text="查看夺宝码  "
                            android:textColor="#ff4447"
                            android:textSize="@dimen/sp13" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/tv1"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tv1"
                            android:text=">"
                            android:textColor="#ff4447"
                            android:textSize="@dimen/sp14" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_share_obtain"
                        android:layout_width="@dimen/dp113"
                        android:layout_height="@dimen/dp27"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/btn_red_radius_border"
                        android:gravity="center"
                        android:textColor="@drawable/color_2"
                        android:text="分享获得更多夺宝码"
                        android:textSize="@dimen/sp11" />


                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp11"
                android:layout_marginTop="@dimen/dp17"
                android:background="#E8E8E8"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp11"
                android:layout_marginRight="@dimen/dp11"
                android:layout_marginTop="@dimen/dp17"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="活动规则:"
                    android:layout_marginBottom="@dimen/dp12"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp17" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1.即日起，嗨抢注册用户参与“0元夺宝”即可获得1个夺宝码，通过分享可以获得更多的夺宝码(分享获得的夺宝码不能超过1个)"
                    android:textColor="#666666"
                    android:lineSpacingMultiplier="1.5"
                    android:textSize="@dimen/sp15" />

                <TextView
                    android:id="@+id/tv_now_opentime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp6"
                    android:text="2.活动时间: 2015年12月7日10点-2015年12月11日10点;"
                    android:lineSpacingMultiplier="1.5"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp15" />

                <TextView
                    android:id="@+id/tv_open_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3.开奖时间:2015年12月11日10点；"
                    android:textColor="#666666"
                    android:layout_marginTop="@dimen/dp6"
                    android:lineSpacingMultiplier="1.5"
                    android:textSize="@dimen/sp15"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp6"
                    android:text="4.开奖后，拥有中奖号码的用户，嗨抢客服会进行电话联系，请保持手机畅通，开奖后超过7天无法联系视为主动放弃。请非手机注册的参与用户绑定手机，以便客服第一时间联系。"
                    android:textColor="#666666"
                    android:lineSpacingMultiplier="1.5"
                    android:textSize="@dimen/sp15" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5.奖品将在开奖后7个工作日内发出。"
                    android:textColor="#666666"
                    android:lineSpacingMultiplier="1.5"
                    android:layout_marginTop="@dimen/dp6"
                    android:textSize="@dimen/sp15" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6.活动最终解释权归嗨抢团队所有。"
                    android:textColor="#666666"
                    android:lineSpacingMultiplier="1.5"
                    android:layout_marginTop="@dimen/dp6"
                    android:textSize="@dimen/sp15" />

                <!--<TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="声明：本活动所有奖品抽奖与苹果公司（Apple lnc.）无关。"
                    android:lineSpacingMultiplier="1.5"
                    android:textColor="@color/yym_common_red"
                    android:layout_marginTop="@dimen/dp6"
                    android:textSize="@dimen/sp15" />-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp34"
                    android:text="抽奖规则:"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp17" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp6"
                    android:lineSpacingMultiplier="1.5"
                    android:text="幸运号码计算规则绝对公平公正，计算规则如下"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp15" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp6"
                    android:lineSpacingMultiplier="1.5"
                    android:text="1.数值A为奖品开奖时间，按年、月、日、时的顺序组合，如2015年12月15日10:00:00则为2015121010；"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp15" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2.数值B为截止奖品开奖时间的总参与人次；"
                    android:lineSpacingMultiplier="1.5"
                    android:layout_marginTop="@dimen/dp6"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp15" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp6"
                    android:text="3.数值A ÷ 数值B得到的余数+原始数10000001，得到最终幸运号码，拥有该幸运号码者，直接获得该奖品。（余数是指整数除法中被除数未被除尽部分，如10÷3 = 3 ......1,1就是余数）"
                    android:textColor="#666666"
                    android:lineSpacingMultiplier="1.5"
                    android:textSize="@dimen/sp15" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <com.shengtao.baseview.TipsLayoutNormal
        android:id="@+id/tl_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_background"
        android:visibility="gone"
        />
</LinearLayout>

