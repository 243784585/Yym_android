<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp355"
    android:layout_height="@dimen/dp208"
    android:id="@+id/ll_dialog"
    android:layout_centerHorizontal="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pop_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp11"
            android:layout_marginLeft="@dimen/dp11"
            android:layout_marginRight="@dimen/dp11"
            android:layout_marginTop="@dimen/dp11"
            android:text="TITLE"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#333333"
            android:textSize="@dimen/sp12" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp11"
            android:layout_marginRight="@dimen/dp11"
            android:background="#dbdbdb" />

        <TextView
            android:id="@+id/pop_null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp11"
            android:layout_marginRight="@dimen/dp11"
            android:text="您并没有参与此次夺宝"
            android:textColor="#494949"
            android:visibility="gone"
            android:textSize="@dimen/sp11" />

        <LinearLayout
            android:id="@+id/ll_join"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp11"
            android:layout_marginRight="@dimen/dp11"
            android:layout_marginTop="@dimen/dp11"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="夺宝号码"
                android:textColor="#494949"
                android:textSize="@dimen/sp11" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp105"
            android:layout_marginLeft="@dimen/dp11"
            android:layout_marginRight="@dimen/dp11"
            android:layout_marginTop="@dimen/dp11"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pop_number1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp30"
                android:text="111122233"
                android:textColor="#ff4447"
                android:textSize="@dimen/sp11" />

            <TextView
                android:id="@+id/pop_number2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="111122233"
                android:textColor="#ff4447"
                android:visibility="gone"
                android:textSize="@dimen/sp11" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp11"
            android:layout_marginRight="@dimen/dp11"
            android:layout_weight="0.57"
            android:background="#dbdbdb" />

        <TextView
            android:id="@+id/tv_onclick"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:gravity="center"
            android:text="确定"
            android:textColor="#007aff"
            android:textSize="@dimen/sp14" />
    </LinearLayout>
</RelativeLayout>