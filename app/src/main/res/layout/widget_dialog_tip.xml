<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp30"
    android:paddingRight="@dimen/dp30" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_white_top_corner"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="@dimen/dp50"
                android:padding="@dimen/dp10"
                android:textColor="@color/common_black"
                android:textSize="@dimen/sp19" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/common_splitline" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never" >

            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/dp60"
                android:padding="@dimen/dp15"
                android:background="@drawable/selector_btn_white_top_corner"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/common_black"
                    android:textSize="@dimen/sp17" />
            </LinearLayout>
        </ScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_splitline" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:background="@drawable/selector_btn_white_bottom_corner"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/dialog_btn_cancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp50"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_white_left_corner"
                android:gravity="center"
                android:text="@string/common_text_cancel"
                android:textColor="@color/common_blue"
                android:textSize="@dimen/sp15" />

            <View
                android:layout_width="1px"
                android:layout_height="@dimen/dp25"
                android:layout_gravity="center"
                android:background="@color/common_splitline" />

            <Button
                android:id="@+id/dialog_btn_sure"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp50"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_white_right_corner"
                android:gravity="center"
                android:text="@string/common_text_sure"
                android:textColor="@color/common_blue"
                android:textSize="@dimen/sp15" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>