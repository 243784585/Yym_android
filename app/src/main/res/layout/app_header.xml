<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_top_bar"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/dp50"
    android:background="@color/common_white"
    >

    <LinearLayout
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:minWidth="@dimen/dp100"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/back_text"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/dp17"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/sp16"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/back_image"
            android:layout_width="@dimen/dp13"
            android:layout_height="@dimen/dp17"
            android:layout_marginLeft="@dimen/dp15"
            android:scaleType="fitXY"
            android:src="@mipmap/fanhui"
            android:visibility="gone"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="发现"
        android:textColor="@color/yym_common_red"
        android:textSize="@dimen/sp17" />


    <ImageView
        android:id="@+id/title_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/question"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginEnd="@dimen/dp10"
        android:visibility="gone"
        />

    <RelativeLayout
        android:id="@+id/action"
        android:layout_width="@dimen/dp100"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:gravity="right|center"
        android:minWidth="@dimen/dp100"
       >

        <TextView
            android:id="@+id/action_title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp10"
            android:gravity="center"
            android:text="编辑"
            android:visibility="gone"
            android:textSize="@dimen/sp14" />

        <ImageView
            android:id="@+id/action_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp10"
            android:scaleType="fitXY"
            android:src="@mipmap/question"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/action_tip"
            android:layout_width="@dimen/dp14"
            android:layout_height="@dimen/dp14"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/dp5"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/action_tip_num"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="0"
                android:textSize="@dimen/sp8" />
        </LinearLayout>

        <View
            android:id="@+id/action_tip_small"
            android:layout_width="@dimen/dp6"
            android:layout_height="@dimen/dp6"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/dp5"
            android:visibility="gone" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/pro_header"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp2"
        android:layout_alignBottom="@+id/title"
        android:layout_marginTop="@dimen/dp1"
        android:progress="100"
        android:visibility="visible" />

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/title_split_color"></View>
</RelativeLayout>