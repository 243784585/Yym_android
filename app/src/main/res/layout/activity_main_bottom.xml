<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/title_split_color"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp53"
        android:background="#FEFEFE"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_main_snatch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/tab_image_snatch"
                android:layout_width="@dimen/dp23"
                android:layout_height="@dimen/dp22"
                android:background="@drawable/selector_tab_image_main_snatch"
                />
            <TextView
                android:id="@+id/tab_txt_snatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/selector_tab_txt_main"
                android:gravity="center"
                android:text="夺宝"
                android:textSize="@dimen/sp11"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_publish"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab_image_publish"
                android:layout_width="@dimen/dp25"
                android:layout_height="@dimen/dp25"
                android:background="@drawable/selector_tab_image_main_publish" />

            <TextView
                android:id="@+id/tab_txt_publish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/selector_tab_txt_main"
                android:gravity="center"
                android:text="最新揭晓"
                android:textSize="@dimen/sp11"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_discover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab_image_discover"
                android:layout_width="@dimen/dp23"
                android:layout_height="@dimen/dp23"
                android:background="@drawable/selector_tab_image_main_discover" />

            <TextView
                android:id="@+id/tab_txt_discover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/selector_tab_txt_main"
                android:gravity="center"
                android:text="发现"
                android:textSize="@dimen/sp11"
                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_main_shopping"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:saveEnabled="false">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="@dimen/dp33"
                    android:layout_height="@dimen/dp28"
                    android:paddingTop="@dimen/dp5"
                    android:paddingLeft="@dimen/dp3"
                    android:paddingRight="@dimen/dp7"
                    >

                <ImageView
                    android:id="@+id/tab_image_shopping"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_tab_image_main_shopping" />
                </RelativeLayout>

                <com.shengtao.utils.CircleImageView
                    android:id="@+id/iv_shopping"
                    android:layout_width="@dimen/dp18"
                    android:layout_height="@dimen/dp18"
                    android:src="@color/yym_common_red"
                    android:layout_gravity="right|top"
                    android:visibility="invisible"
                    />

                <TextView
                    android:id="@+id/tv_shopping"
                    android:layout_width="@dimen/dp18"
                    android:layout_height="@dimen/dp18"
                    android:text="1"
                    android:gravity="center"
                    android:layout_gravity="right|top"
                    android:textColor="@color/common_white"
                    android:textSize="@dimen/sp10"
                    android:visibility="invisible"
                    />
            </FrameLayout>

            <TextView
                android:id="@+id/tab_txt_shopping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/selector_tab_txt_main"
                android:gravity="center"
                android:text="购物车"
                android:textSize="@dimen/sp11"
                 />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_mine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="false"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tab_image_mine"
                android:layout_width="@dimen/dp23"
                android:layout_height="@dimen/dp23"
                android:background="@drawable/selector_tab_image_main_mine" />

            <TextView
                android:id="@+id/tab_txt_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/selector_tab_txt_main"
                android:gravity="center"
                android:text="个人中心"
                android:textSize="@dimen/sp11"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
