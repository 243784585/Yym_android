<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_show_prize_main"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="@dimen/dp11">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp11">

                <com.shengtao.utils.CircleImageView
                    android:id="@+id/iv_user_head"
                    android:layout_width="@dimen/dp40"
                    android:layout_height="@dimen/dp40"
                    android:src="@drawable/default_user_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp8"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/user_nick"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@id/iv_user_head"
                        android:ellipsize="end"
                        android:text="小情歌"
                        android:textColor="#ff5050"
                        android:textSize="@dimen/sp13" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp7">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/time" />

                        <TextView
                            android:id="@+id/show_prized_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/imageView"
                            android:gravity="center"
                            android:text="2015-11-11"
                            android:textColor="#999999"
                            android:textSize="@dimen/sp10"
                            android:layout_marginLeft="@dimen/dp3"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_show_prized_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="TITLE"
                android:textSize="@dimen/sp14"
                android:textColor="@color/yym_common_black"
                />

            <TextView
                android:id="@+id/tv_show_prized_detail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp9"
                android:singleLine="true"
                android:text="(第222期，)小米啦啦啦 啦了all按理啦啦按理啦啦聊得来的的劳动力到了"
                android:textColor="@color/yym_common_gray"
                android:textSize="@dimen/sp10" />

            <TextView
                android:id="@+id/show_prized_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp9"
                android:lineSpacingExtra="@dimen/dp3"
                android:text="BODY"
                android:textSize="@dimen/sp13"
                android:textColor="#666666"
                />

            <LinearLayout
                android:id="@+id/layout_images"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp9"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_1"
                    android:layout_width="@dimen/dp82"
                    android:layout_height="@dimen/dp82"
                    android:layout_marginRight="@dimen/dp3"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_2"
                    android:layout_width="@dimen/dp82"
                    android:layout_height="@dimen/dp82"
                    android:layout_marginRight="@dimen/dp3"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_3"
                    android:layout_width="@dimen/dp82"
                    android:layout_height="@dimen/dp82"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp10"
            android:background="#f3f3f3" />
    </LinearLayout>

</RelativeLayout>