<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp46"
        android:background="@color/top_bar_normal_bg"
        android:gravity="center_vertical" >
		
        <include 
            layout="@layout/commom_back_btn"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/Group_chat_information"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp20" />

        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="@dimen/dp28"
            android:layout_height="@dimen/dp28"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp5"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:layout_marginLeft="@dimen/dp6"
        android:layout_marginRight="@dimen/dp8"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/dp55"
            android:layout_height="@dimen/dp55"
            android:layout_alignParentLeft="true"
            android:padding="@dimen/dp5"
            android:src="@drawable/groups_icon" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp7"
            android:layout_toRightOf="@id/avatar"
            android:textColor="#0F0F0F"
            android:textSize="@dimen/sp16" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/email_contanier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp11"
        android:layout_marginRight="@dimen/dp11"
        android:layout_marginTop="@dimen/dp6"
        android:background="@drawable/button_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_myprofile_selector"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp9"
                android:text="@string/Group_of_Lord"
                android:textColor="#8F8F8F"
                android:textSize="@dimen/sp16" />

            <TextView
                android:id="@+id/tv_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5"
                android:padding="@dimen/dp8"
                android:textColor="#080808"
                android:textSize="@dimen/sp14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_myprofile_selector"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp9"
                android:text="@string/Introduction"
                android:textColor="#8F8F8F"
                android:textSize="@dimen/sp16" />

            <TextView
                 android:id="@+id/tv_introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp5"
                android:padding="@dimen/dp8"
                android:textColor="#080808"
                android:textSize="@dimen/sp14" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_add_to_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp8"
        android:layout_marginLeft="@dimen/dp11"
        android:layout_marginRight="@dimen/dp11"
        android:layout_marginTop="@dimen/dp15"
        android:background="@drawable/btn_green_selector"
        android:padding="@dimen/dp7"
        android:text="@string/To_join_the_chat"
        android:onClick="addToGroup"
        android:enabled="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp18" />

</LinearLayout>