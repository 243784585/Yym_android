<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center" >

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="@dimen/dp240"
        android:layout_height="@dimen/dp124"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:scrollbars="vertical"
        android:paddingTop="@dimen/dp20">

        <TextView
            android:id="@+id/tv_title_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="@color/black"
            android:textSize="@dimen/sp16" />

        <TextView
            android:id="@+id/tv_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp11"
            android:visibility="gone"
            android:text="确定退出吗"
            android:textColor="@android:color/black"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/sp11" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/dp20"
            android:background="@color/change_qq_hint" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/sp15"
                android:background="@drawable/left_btn_select"
                android:visibility="gone"
                android:text="@string/cancel" />

            <View
                android:id="@+id/v_split"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@color/change_qq_hint" />

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/sp15"
                android:background="@drawable/right_btn_select"
                android:text="确定" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
