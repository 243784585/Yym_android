<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[2015-12-11] 您的宝物！第30期 苹果手机 6S 16G (颜色随机 唯一不同的是处处不同 联通移动电信三网通 正式起售)已发货！"
        android:textSize="@dimen/sp15"
        android:textColor="@color/common_black"
        android:lineSpacingExtra="@dimen/dp9"
        android:padding="@dimen/dp30"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/common_white"
        >
        <TextView
            android:id="@+id/btn_confirm_receivegood"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp44"
            android:layout_weight="1"
            android:text="确认收货"
            android:textSize="@dimen/sp15"
            android:textColor="@drawable/selector_receive_text_color"
            android:gravity="center"
            android:background="@drawable/background_textview"
            />

        <!--<ImageView-->
            <!--android:layout_width="0.2dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="@color/common_splitline"-->
            <!--/>-->
        <TextView
            android:id="@+id/btn_show"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp44"
            android:layout_weight="1"
            android:text="晒单"
            android:textSize="@dimen/sp15"
            android:textColor="@drawable/selector_receive_text_color"
            android:gravity="center"
            android:background="@drawable/background_textview"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp11"
        android:background="#f8f8f8"
        />
</LinearLayout>
