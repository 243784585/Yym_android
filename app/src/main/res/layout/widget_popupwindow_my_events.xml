<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp70"
        android:id="@+id/ll_bottom"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_apply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_white_top_corner"
            android:gravity="center"
            android:minHeight="@dimen/dp40"
            android:textSize="@dimen/sp17"
            android:text="报名中"
            android:textColor="@color/common_blue" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/common_splitline" />

        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_menuitem_bg"
            android:gravity="center"
            android:minHeight="@dimen/dp40"
            android:textSize="@dimen/sp17"
            android:text="进行中"
            android:textColor="@color/common_blue" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/common_splitline" />

        <TextView
            android:id="@+id/tv_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_white_bottom_corner"
            android:gravity="center"
            android:minHeight="@dimen/dp40"
            android:textSize="@dimen/sp17"
            android:text="已结束"
            android:textColor="@color/common_blue" />

    </LinearLayout>

</RelativeLayout>